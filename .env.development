# Development-specific environment variables for optimization
# These settings optimize the Next.js development server for smooth performance

# Enable faster webpack builds with Turbopack (Next.js 13+)
TURBOPACK=1

# Optimize React development
NEXT_TELEMETRY_DISABLED=1

# Enable React strict mode for better debugging
REACT_STRICT_MODE=true

# Enable source maps for better debugging
GENERATE_SOURCEMAP=true

# Optimize build performance
NEXT_PRIVATE_LOCAL_WEBPACK=true

# Enable experimental features for better performance
NEXT_PRIVATE_STANDALONE=true

# Webpack optimizations
WEBPACK_CACHE=memory

# Development server optimizations
NEXT_PRIVATE_SKIP_STATIC_OPTIMIZATION=false

# Font optimization
OPTIMIZE_FONTS=true

# Image optimization
OPTIMIZE_IMAGES=true

# Reduce bundle size in development
NEXT_PRIVATE_MINIMIZE_JS=false
NEXT_PRIVATE_MINIMIZE_CSS=false

# Enable hot reloading optimizations
FAST_REFRESH=true

# Memory optimizations
NODE_OPTIONS="--max_old_space_size=4096 --optimize-for-size"

# Enable better error overlay
NEXT_PRIVATE_DEBUG_CACHE=false