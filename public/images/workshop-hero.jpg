    <circle cx="120" cy="120" r="50" fill="#ef4444" opacity="0.9"/>
    <text x="120" y="110" text-anchor="middle" font-family="Arial, sans-serif"
          font-size="12" font-weight="bold" fill="white">ONLY</text>
    <text x="120" y="130" text-anchor="middle" font-family="Arial, sans-serif"
          font-size="16" font-weight="bold" fill="white">23</text>
    <text x="120" y="145" text-anchor="middle" font-family="Arial, sans-serif"
          font-size="10" font-weight="bold" fill="white">SEATS LEFT</text>
  </g>

  <!-- Decorative elements -->
  <g opacity="0.6">
    <path d="M0,400 Q300,350 600,400 T1200,400" stroke="#00C851" stroke-width="2" fill="none"/>
    <path d="M0,500 Q300,450 600,500 T1200,500" stroke="#00C851" stroke-width="1" fill="none"/>
  </g>
</svg>